<?xml version="1.0"?>
<Container>
  <Name>BrewNotes</Name>
  <Repository>ghcr.io/rjgrandy/brewnotes:latest</Repository>
  <Registry>https://ghcr.io</Registry>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Support>https://github.com/rjgrandy/brewnotes/issues</Support>
  <Project>https://github.com/rjgrandy/brewnotes</Project>
  <Overview>BrewNotes is a self-hosted coffee and espresso logging app for fast daily use and analytics.</Overview>
  <Description>Log beans, drink settings, ratings, notes, and photos for your KitchenAid KF7. Includes analytics, exports, and PWA support.</Description>
  <WebUI>http://[IP]:[PORT:8087]</WebUI>
  <Icon>https://raw.githubusercontent.com/rjgrandy/brewnotes/main/frontend/public/icon.svg</Icon>
  <TemplateURL>https://raw.githubusercontent.com/rjgrandy/brewnotes/main/brewnotes.xml</TemplateURL>
  
  <!-- Port Mapping -->
  <Config Name="WebUI Port" Target="8080" Default="8087" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">8087</Config>
  
  <!-- Volume Mapping -->
  <Config Name="App Data" Target="/data" Default="/mnt/user/appdata/brewnotes" Mode="rw" Description="Application data directory (database and uploads)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/brewnotes</Config>
  
  <!-- User/Group IDs -->
  <Config Name="PUID" Target="" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
  
  <!-- Application Environment Variables -->
  <Config Name="APP_PORT" Target="" Default="8080" Mode="" Description="Internal application port (should match container port)" Type="Variable" Display="advanced" Required="true" Mask="false">8080</Config>
  <Config Name="DATA_DIR" Target="" Default="/data" Mode="" Description="Internal data directory path" Type="Variable" Display="advanced" Required="true" Mask="false">/data</Config>
  <Config Name="DB_PATH" Target="" Default="/data/app.db" Mode="" Description="SQLite database file path" Type="Variable" Display="advanced" Required="true" Mask="false">/data/app.db</Config>
  <Config Name="UPLOAD_DIR" Target="" Default="/data/uploads" Mode="" Description="Photo uploads directory path" Type="Variable" Display="advanced" Required="true" Mask="false">/data/uploads</Config>
  
  <!-- Category for Unraid Community Applications -->
  <Category>Productivity: Tools:</Category>
  <Date>2025-01-14</Date>
</Container>
